<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_up">

    <ImageView
        android:id="@+id/image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        tools:layout_editor_absoluteX="-62dp"
        tools:layout_editor_absoluteY="45dp">
    </ImageView>

    <View
        android:id="@+id/background_cover2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="25dp"
        android:background="#50000000"
        android:rotation="61"
        android:rotationY="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="@+id/image_background"
        tools:layout_editor_absoluteX="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold">
        </TextView>

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/custom_email"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:textColorHint="#393838"
            android:background="@drawable/custom_edittext"
            android:textSize="16sp">
        </EditText>
        <EditText
            android:id="@+id/txtPassWork"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            android:drawableStart="@drawable/custom_lock"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:hint="Passwork"
            android:textColorHint="#393838"
            android:background="@drawable/custom_edittext"
            android:textSize="16sp">
        </EditText>
        <EditText
            android:id="@+id/txtEnterPassWork"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            android:drawableStart="@drawable/custom_lock"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:hint="Enter Passwork"
            android:textColorHint="#393838"
            android:background="@drawable/custom_edittext"
            android:textSize="16sp">
        </EditText>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Sing Up"
            android:textColorHint="@color/white"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:orientation="horizontal"
            android:layout_weight="10"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:text="Already have a account ?"
                android:textColor="@color/white"
                android:gravity="center_vertical|end"
                android:textStyle="bold"
                android:layout_weight="7"
                android:textSize="16sp">
            </TextView>
            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:text="Login"
                android:gravity="center_vertical"
                android:textColor="#00E5FF"
                android:paddingStart="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="3">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:layout_height="39dp"
            android:orientation="horizontal"
            android:layout_weight="10"
            android:gravity="center_vertical">

            <ProgressBar
                android:id="@+id/progressBarleft"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="3dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Or"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold">
            </TextView>
            <ProgressBar
                android:id="@+id/progressBarRight"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="3dp"
                android:background="@color/white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtLoginFace"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/face1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawablePadding="50dp"
            android:text="Login with Facebook"
            android:textColor="#07DCF4"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:background="@drawable/custom_edittext"
            android:textSize="16sp">
        </TextView>
        <TextView
            android:id="@+id/txtLoginGoogle"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            android:drawableStart="@drawable/google"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawablePadding="60dp"
            android:text="Login with Google"
            android:textColor="#983D20"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:background="@drawable/custom_edittext"
            android:textSize="16sp">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            android:textSize="16sp">
        </TextView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>